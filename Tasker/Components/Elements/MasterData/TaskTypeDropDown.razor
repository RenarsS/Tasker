@using Tasker.API.Infrastructure.Clients
@using Tasker.Services
@using Task = System.Threading.Tasks.Task
@inject IMasterDataService MasterDataService;

<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="0.5rem">
     <RadzenLabel Text="Task Type" Component="TaskTypeBindValue"/>
     <RadzenDropDown  @bind-Value="@_value" Data="@_taskTypes"  TextProperty="@nameof(TaskType.Name)" ValueProperty="@nameof(TaskType.TaskTypeId)" Style="width: 100%" Name="TaskTypeBindValue"/>
</RadzenStack>

@code {
     int _value;
     IEnumerable<TaskType> _taskTypes = new List<TaskType>();

     protected override async Task OnInitializedAsync()
     {
          await base.OnInitializedAsync();
          _taskTypes = await MasterDataService.GetTaskTypesAsync();
     }
}